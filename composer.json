{
    "name": "shortener/shorty",
    "description": "Google Url Shortener API Package for Laravel 5.1",
    "keywords": [
        "google",
        "url",
        "shortener",
        "laravel",
        "api"
    ],
    "homepage": "https://github.com/mbarwick83/shorty",
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Barwick",
            "email": "mike@barwickandco.com"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": { 
        "psr-4": {
            "Mbarwick83\\Shorty\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mbarwick83\\Shorty\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
